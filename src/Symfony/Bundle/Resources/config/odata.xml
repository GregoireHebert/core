<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="ApiPlatform\Odata\State\OdataBatchProcessor" class="ApiPlatform\Odata\State\OdataBatchProcessor">
            <argument type="service" id="request_stack" />
            <argument type="service" id="http_kernel" />
            <argument type="service" id="api_platform.http.media_type_factory" />
            <argument type="service" id="serializer" />
            <tag name="api_platform.state_processor" priority="-100" />
        </service>

        <service id="api_platform.http.media_type_factory" class="ApiPlatform\Http\MediaTypeFactory" public="false"/>

        <service id="api_platform.odata.listener.request.deserialize" class="ApiPlatform\Odata\EventListener\DeserializeListener">
            <!-- Run after API Platform DeserializeListener -->
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="1" />
        </service>
    </services>
</container>
